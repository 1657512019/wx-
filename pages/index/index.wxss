swiper-item image{
  width: 100%;
}

.banners{
  width: 100%;
  height: 300rpx;
}
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction:column ;
  margin-top: 10rpx;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(240, 19, 19);
  border-radius: 100%;
  display:flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  color: aliceblue;
}
.navItem text{
  font-size:26rpx;
  font-weight: lighter;
  margin-top: 5rpx;
}

/* 推荐歌曲样式 */
.rommendContainer{
  padding: 20rpx;
}


/* 内容区 */
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
/* 推荐区域 */
.recommendScroll{
  display: flex;
  height: 300rpx;
  padding: 20rpx;
}
.recommendScroll text{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜样式 */
.topLits{
  padding: 20rpx;
}
.topListSwiper{
  height: 450rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  /* 当一个元素设置 flex 子级自动设置为block */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}